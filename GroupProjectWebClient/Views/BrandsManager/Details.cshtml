@model BusinessObject.Models.Brand

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Brand</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Brand Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BrandName)</dd>
        <dt class="col-sm-2">Brand Image</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.BrandImage)</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BrandId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
