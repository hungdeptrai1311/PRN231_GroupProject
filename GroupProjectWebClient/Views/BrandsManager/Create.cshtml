@model BusinessObject.Models.Brand

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Brand</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label for="BrandName" class="form-label">Brand Name</label>
                <input type="text" asp-for="BrandName" class="form-control" id="BrandName" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="BrandImage" class="form-label">Brand Image</label>
                <input type="text" asp-for="BrandImage" class="form-control" id="BrandImage" />
                <span asp-validation-for="BrandImage" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Description" class="form-label">Description</label>
                <input type="text" asp-for="Description" class="form-control" id="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
