@{
    Layout = "_LayoutCustomer";
}
@using BusinessObject.Models

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .notification-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        .notification-icon {
            font-size: 48px;
            color: #28a745;
        }

        .notification-content {
            margin-top: 20px;
        }

        .btn {
            border-radius: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="notification-container text-center">
            <span class="notification-icon">&#10003;</span>
            <h4 class="mt-3">Order Placed Successfully!</h4>
            <div class="notification-content">
                <p>Your order has been successfully placed. You will receive a confirmation email shortly.</p>
                <p>Thank you for shopping with us!</p>
            </div>
            <a href="/Home/Index" class="btn btn-success mt-3">Continue Shopping</a>
        </div>
    </div>
</body>
</html>