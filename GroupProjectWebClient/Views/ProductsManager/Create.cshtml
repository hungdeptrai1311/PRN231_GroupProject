@model BusinessObject.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label for="ProductName" class="form-label">Product Name</label>
                <input type="text" asp-for="ProductName" class="form-control" id="ProductName" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Description" class="form-label">Description</label>
                <input type="text" asp-for="Description" class="form-control" id="Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Price" class="form-label">Price</label>
                <input type="number" asp-for="Price" class="form-control" id="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Quantity" class="form-label">Quantity</label>
                <input type="number" asp-for="Quantity" class="form-control" id="Quantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="ProductImage" class="form-label">Product Image</label>
                <input type="text" asp-for="ProductImage" class="form-control" id="ProductImage" />
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="BrandId" class="form-label">Brand</label>
                <select asp-for="BrandId" class="form-control" id="BrandId" asp-items="ViewBag.BrandId"></select>
            </div>
            <div class="mb-3">
                <label for="CategoryId" class="form-label">Category</label>
                <select asp-for="CategoryId" class="form-control" id="CategoryId" asp-items="ViewBag.CategoryId"></select>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
