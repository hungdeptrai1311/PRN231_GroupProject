@model BusinessObject.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
        <dt class="col-sm-2">Password</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Password)</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Address)</dd>
        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>
        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Role.RoleName)</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
